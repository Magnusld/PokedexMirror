{
  "name": "typescript-graphql",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/index",
    "start": "node dist/index",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "seed": "ts-node ./prisma/seed.ts",
    "test": "dotenv -e .env.test jest -i",
    "test:unit": "dotenv -e .env.test jest __tests__/unit -i",
    "test:integration": "dotenv -e .env.test jest __tests__/integration -i --runInBand",
    "test:migrate": "dotenv -e .env.test npx prisma db push",
    "test:migrate:reset": "dotenv -e .env.test npx prisma migrate reset -- --force"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4
  },
  "dependencies": {
    "@fast-csv/parse": "^4.3.6",
    "@prisma/client": "^2.23.0",
    "apollo-server": "3.5.0",
    "graphql": "15.6.1",
    "graphql-scalars": "1.11.1",
    "nexus": "1.0.0",
    "nexus-plugin-prisma": "^0.35.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "14.17.21",
    "@types/pluralize": "0.0.29",
    "@types/sqlite3": "^3.1.7",
    "dotenv-cli": "^4.1.0",
    "get-port": "^5.1.1",
    "graphql-request": "^3.6.1",
    "jest": "^27.3.1",
    "jest-mock-extended": "^2.0.4",
    "pluralize": "^8.0.0",
    "prisma": "^2.23.0",
    "sqlite3": "^5.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8",
    "typescript": "^4.4.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
