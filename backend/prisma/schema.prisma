generator client {
  provider = "prisma-client-js"
  binaryTargets = ["debian-openssl-1.1.x", "windows", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model PokemonRating {
  id           Int     @id @default(autoincrement())
  userGuid     String
  ratedPokemon Pokemon @relation(fields: [pokemonId], references: [id])
  pokemonId    Int
  rating       Int
  @@unique([userGuid, pokemonId])
}

model Pokemon {
  id          Int     @id @default(autoincrement())
  pokedexNr   Int
  name        String
  generation  Int
  species     String
  type1       String
  type2       String?
  heightMeter Float?
  weightKg    Float?
  hp          Int
  attack      Int
  defense     Int
  sp_attack   Int
  sp_defense  Int
  speed       Int
  ability1    String?
  ability2    String?
  ability3    String?
  ratings PokemonRating[]
  @@index(name)
  @@index(pokedexNr)
}
